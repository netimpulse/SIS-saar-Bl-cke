{% comment %}
  Section: two-areas  (Industrie & Gebäude)
  ▸ Farben & Schriftgrößen vollständig über Theme-Editor steuerbar
  ▸ Kachel-Hintergründe + Hover-Farben werden in diesem <style>-Block gerendert
{% endcomment %}

<link rel="stylesheet" href="{{ 'section-two-areas.css' | asset_url }}">

<style>
/* ====== Bereichs-Bordüre oben ===================================== */
#two-areas-{{ section.id }} .area--industry { border-top-color: {{ section.settings.industry_area_border_color }}; }
#two-areas-{{ section.id }} .area--building { border-top-color: {{ section.settings.building_area_border_color }}; }

/* ====== Kachelfarben (Normal + Hover) ============================== */
#two-areas-{{ section.id }} .area--industry .sub-service-item        { background: {{ section.settings.industry_tile_bg_color }};  color: {{ section.settings.industry_tile_text_color }}; }
#two-areas-{{ section.id }} .area--industry .sub-service-item:hover { background: {{ section.settings.industry_tile_bg_hover_color }}; }

#two-areas-{{ section.id }} .area--building .sub-service-item        { background: {{ section.settings.building_tile_bg_color }};  color: {{ section.settings.building_tile_text_color }}; }
#two-areas-{{ section.id }} .area--building .sub-service-item:hover { background: {{ section.settings.building_tile_bg_hover_color }}; }

/* ====== Button-Hover-Farben ======================================= */
#two-areas-{{ section.id }} .btn--industry:hover  {
  background: {{ section.settings.industry_btn_bg_hover_color }};
  color:      {{ section.settings.industry_btn_text_hover_color }};
  border-color: {{ section.settings.industry_btn_border_hover_color }};
}

#two-areas-{{ section.id }} .btn--building:hover  {
  background: {{ section.settings.building_btn_bg_hover_color }};
  color:      {{ section.settings.building_btn_text_hover_color }};
  border-color: {{ section.settings.building_btn_border_hover_color }};
}
</style>

<section class="two-areas" id="two-areas-{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.show_heading -%}
      <h2 class="two-areas__heading"
          style="font-size: {{ section.settings.heading_font_size }}px;
                 color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.settings.show_subheading -%}
      <p class="two-areas__subheading"
         style="font-size: {{ section.settings.subheading_font_size }}px;
                color: {{ section.settings.subheading_color }};">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}

    <div class="two-areas__grid">
      {%- render 'two-area', side: 'industry', section: section -%}
      {%- render 'two-area', side: 'building', section: section -%}
    </div>
  </div>
</section>

