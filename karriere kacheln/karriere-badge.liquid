{% comment %}
  snippets/karriere-badge.liquid
  Badge (Pill) für Beschäftigungsart – steht über dem Titel, links.
  Usage:
  {% render 'karriere-badge', label: 'Vollzeit / Teilzeit', bg_color: '#D1FADF', text_color: '#065F46' %}
{% endcomment %}

{%- assign _label = label | default: '' -%}
{%- assign _bg = bg_color | default: '#D1FADF' -%}
{%- assign _txt = text_color | default: '#065F46' -%}

{% if _label != blank %}
  <span class="job-badge" style="background: {{ _bg }}; color: {{ _txt }};">
    {{ _label }}
  </span>
{% endif %}
