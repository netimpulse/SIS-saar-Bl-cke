{%- comment -%}
  Renders two inline buttons for the hero overlay.
  Expected variables:
  - section_id
  - btn1_text, btn1_link
  - btn2_text, btn2_link
{%- endcomment -%}

<div class="hero-overlay__actions">
  {%- if btn1_text != blank -%}
    <a class="hero-overlay__btn hero-overlay__btn--1"
       href="{{ btn1_link | default: '#' }}">
      {{ btn1_text }}
    </a>
  {%- endif -%}

  {%- if btn2_text != blank -%}
    <a class="hero-overlay__btn hero-overlay__btn--2"
       href="{{ btn2_link | default: '#' }}">
      {{ btn2_text }}
    </a>
  {%- endif -%}
</div>
